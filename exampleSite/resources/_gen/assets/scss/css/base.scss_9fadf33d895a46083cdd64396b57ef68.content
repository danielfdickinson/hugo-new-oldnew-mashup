/*  The C Shore Homepage Elements Stylesheet */
/* Remember, for the level of specifity last rule wins, hence
 *   most important rules are last
*/
.FourOhFour {
  width: 99.5%; }
  .FourOhFour .Main {
    position: relative;
    top: 7.4em; }
    .FourOhFour .Main .Title {
      text-align: center;
      font-family: Georgia, serif;
      width: 69%;
      padding: 1em;
      margin-top: 0;
      margin-left: 12%;
      margin-right: 12%;
      display: block;
      font-size: 1.3em; }
    .FourOhFour .Main .TextBlockSpacingBefore {
      width: 20%;
      display: inline-block; }
    .FourOhFour .Main .TextBlockSpacingAfter {
      width: 19%;
      display: inline-block; }
    .FourOhFour .Main .TextBlock {
      text-align: center;
      padding: 0;
      padding-top: 1em;
      padding-bottom: 1em;
      display: inline-block;
      width: 60%; }
    .FourOhFour .Main .Footer {
      position: relative;
      top: 7.4em; }

